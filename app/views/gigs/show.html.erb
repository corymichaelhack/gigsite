<h1><%= @gig.title %></h1>

<h1><%= @gig.description %></h1>

<div class="text-center">
<%= link_to 'Add a new Site...', new_gig_site_path(@gig), class: 'btn btn-primary btn-lg' %>
</div>

<ul>
  <% @gig.sites.each do |site| %>
  <li>
    <%= link_to site.name, gig_site_path( @gig, site ) %>
  </li>
  <% end %> 
</ul>