<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= @gig.title %></h1>
  <h2 class="text-center"><%= @gig.description %></h2>
  
  <div class="text-center">
  <%= link_to 'Add a new Site...', new_admin_gig_site_path(@gig), class: 'btn btn-primary btn-lg' %>
  </div>

  <div class="text-center">
    <ul>
      <% @gig.sites.each do |site | %>
      <li>
        <%= site.name %>
      </li>
      <% end %> 
    </ul>
  </div>

</div>